.img {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 80rpx;
  margin-bottom: 110rpx;
}
.img image {
  width: 180rpx;
  height: 180rpx;
}
.user {
  width: 600rpx;
  height: 100rpx;
}
.user input {
  width: 100%;
